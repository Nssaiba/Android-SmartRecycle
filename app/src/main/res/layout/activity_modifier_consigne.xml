<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_modifier_consigne"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etTypeDechet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type de déchet"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etCouleurPoubelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Couleur poubelle"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etAFaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="À faire"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etAEviter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="À éviter"
            android:inputType="text"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnModifierConsigne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifier" />
    </LinearLayout>
</ScrollView>
